{
  "expo": {
    "name": "FacialInsight",
    "slug": "facial-insight",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.svg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.svg",
      "resizeMode": "contain",
      "backgroundColor": "#4a6bff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to detect and analyze facial characteristics for age, gender, and expression recognition."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "CAMERA"
      ],
      "package": "com.facialinsight.app"
    },
    "web": {
      "favicon": "./assets/icon.svg"
    },
    "platforms": ["ios", "android"],
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FacialInsight to access your camera to detect and analyze facial characteristics."
        }
      ]
    ]
  }
}
